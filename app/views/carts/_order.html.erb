<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th>數量</th>
      <th>售價</th>
      <th>小計</th> 
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% current_cart.items.each do |item| %>
      <tr>
        <td><%= link_to item.product.name, item.product %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price %></td>
        <td><%= item.total_price %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">總計</td>
      <td><%= current_cart.total_price %></td>
    </tr>
  </tfoot>
</table>