<h1>商品清單</h1>

<%= link_to '新增商品', new_product_path, class: 'btn btn-success btn-block' %>
<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th>說明</th>
      <th>售價</th>
      <th colspan = "2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to '放入購物車', add_cart_path(product), method: :put, class: "btn btn-danger btn-sm" %>
          <%= link_to product.name , product %>
        </td>
        <td><%= product.description%></td>
        <td><%= product.price %></td>
        <td><%= link_to '編輯', edit_product_path(product), class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to '刪除', product, method: :delete, data: { confirm: "確定嗎？" }, class: "btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
